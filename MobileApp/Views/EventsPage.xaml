<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MobileApp.ViewModels"
             xmlns:models="clr-namespace:MobileApp.Models"
             x:Class="MobileApp.Views.EventsPage"
             x:DataType="viewmodels:EventsViewModel"
             Title="События">
    <ContentPage.BindingContext>
        <viewmodels:EventsViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Events}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:EventItem">
                <Border Margin="10" Padding="10">
                    <StackLayout>
                        <Label Text="{Binding Title}" FontSize="Medium" FontAttributes="Bold"/>
                        <Label Text="{Binding Description}" FontSize="Small"/>
                        <Label Text="{Binding Date, StringFormat='Дата: {0:dd.MM.yyyy}'}" FontSize="Small" TextColor="Gray"/>
                        <ImageButton Source="star.png"
                                     Clicked="OnAddToCalendarClicked"
                                     CommandParameter="{Binding .}" />
                    </StackLayout>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>