<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
           xmlns:viewmodels="clr-namespace:MobileApp.ViewModels"  
           xmlns:models="clr-namespace:MobileApp.Models"  
           x:Class="MobileApp.Views.EventsPage"  
           x:DataType="viewmodels:EventsViewModel">  

  <ContentPage.BindingContext>  
      <viewmodels:EventsViewModel />  
  </ContentPage.BindingContext>  

  <VerticalStackLayout Padding="10" Spacing="10" Background="LightCyan">  

      <!-- Список событий -->  
      <Grid RowDefinitions="*" VerticalOptions="Start">  
          <CollectionView x:Name="EventsList"  
              ItemsSource="{Binding Events}"  
              MaximumHeightRequest="700"
              ItemsLayout="VerticalList" 
              SelectionMode="None">  
              <CollectionView.ItemTemplate>  
                  <DataTemplate x:DataType="models:EventItem">  
                      <Frame CornerRadius="15"  
                             BackgroundColor="#D4FFC4"  
                             Padding="15"  
                             Margin="0,0,0,5">  
                          <Grid>  
                              <Grid.ColumnDefinitions>  
                                  <ColumnDefinition Width="Auto"/>  
                                  <ColumnDefinition Width="*"/>  
                                  <ColumnDefinition Width="Auto"/>  
                              </Grid.ColumnDefinitions>  

                              <!-- Дата слева -->  
                              <Label Text="{Binding Date, StringFormat='{}{0:dd.MM.yyyy}'}"  
                                     FontSize="14"  
                                     VerticalOptions="End"  
                                     Grid.Column="0"/>  

                              <!-- Контент: заголовок и автор -->  
                              <StackLayout Grid.Column="1" Spacing="2" Padding="10,0">  
                                  <Label Text="{Binding Title}"  
                                         FontSize="16"  
                                         FontAttributes="Bold"/>  
                                  <Label Text="{Binding Description}"  
                                           FontSize="14"/>  


                              </StackLayout>  

                              <!-- Звёздочка для добавления в календарь -->  
                              <Label Text="{Binding Author}" Grid.Column="2"   
                                     VerticalOptions="End"                     
                                     FontSize="12"  
                                     TextColor="Gray"/>  
                              <ImageButton Source="star_gif_32x32.gif"  
                             BackgroundColor="Transparent"  
                             Clicked="OnAddToCalendarClicked"  
                             CommandParameter="{Binding .}"  
                             Grid.Column="2"  
                             HorizontalOptions="End"  
                             VerticalOptions="Start"/>  
                          </Grid>  
                      </Frame>  
                  </DataTemplate>  
              </CollectionView.ItemTemplate>  
          </CollectionView>  
      </Grid>          
  </VerticalStackLayout>  
</ContentPage>