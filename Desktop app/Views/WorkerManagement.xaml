<Window x:Class="Desktop_app.WorkerManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_app"
        mc:Ignorable="d"
        Title="Управление персоналом" Height="600" Width="900" WindowStartupLocation="CenterScreen" 
        MinHeight="450" MinWidth="800"
        Icon="\Images\Logo.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="{StaticResource LightGreenBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="\Images\Logo.png" Height="80" Width="80" Margin="10 10 30 10"/>
            <Border CornerRadius="15" Grid.Column="1" Background="White"  VerticalAlignment="Center">
                <TextBlock FontSize="20" Text="Организационная структура" 
                            Padding="10"/>
            </Border>
            
        </Grid>

        <ScrollViewer Grid.Column="0" Grid.Row="1"
                      Margin="30 30 10 30"  Background="LightGray"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <Canvas Name="SubdepartmentCanvas" VerticalAlignment="Top">
                
                <ItemsControl x:Name="NodeListBox" ItemsSource="{Binding Nodes}"
                         VirtualizingStackPanel.IsVirtualizing="False" >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding X}" />
                            <Setter Property="Canvas.Top" Value="{Binding Y}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding SubdepartmentName}" Width="400" Height="50" 
                                    Background="{StaticResource LightGreenBrush}"
                                    FontSize="12"
                                    Click="Subdepartment_Click"/>                           
                                    
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding Connections}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line X1="{Binding X1}" X2="{Binding X2}" Y1="{Binding Y1}" Y2="{Binding Y2}"
                                  Stroke="Black" StrokeThickness="1"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>
        </ScrollViewer>        

        
        <ListBox ItemsSource="{Binding Workers}" Grid.Column="1" Grid.Row="1"
            Margin="10 30 30 30" Background="LightGray">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" FontSize="7"
                                    Text="{Binding SubdepartmentName}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" FontSize="7"
                                    Text="{Binding JobPosition, StringFormat='- {0}'}"/>
                            
                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" FontSize="10"
                                    Text="{Binding FullName}"/>
                            
                        <TextBlock Grid.Row="2" Grid.Column="0" FontSize="8"
                                    Text="{Binding Phone}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" FontSize="8"
                                    Text="{Binding Email}"/>

                        <TextBlock Grid.Row="3" Grid.Column="1" FontSize="7"
                                    Text="{Binding Office}"/>

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>    
</Window>
