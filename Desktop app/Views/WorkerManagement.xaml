<Window x:Class="Desktop_app.WorkerManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_app"
        mc:Ignorable="d"
        Title="Управление персоналом" Height="700" Width="1000" WindowStartupLocation="CenterScreen" WindowState="Maximized"
        MinHeight="450" MinWidth="800"
        Icon="\Images\Logo.png">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="TopPanel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="{StaticResource LightGreenBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="\Images\Logo.png" Height="80" Width="80" Margin="10 10 30 10"/>
            <Border CornerRadius="15" Grid.Column="1" Background="White"  VerticalAlignment="Center">
                <TextBlock FontSize="20" Text="Организационная структура" 
                            Padding="10"/>
            </Border>
            
        </Grid>

        <Grid x:Name="SubdepartmentGrid" Grid.Column="0" Grid.Row="1" Margin="30 30 10 30"  Background="LightGray">
            <ScrollViewer x:Name="SubdepartmentScrollViewer" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel"                         
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                <Canvas Name="SubdepartmentCanvas" 
                            VerticalAlignment="Top">
                    <ItemsControl x:Name="NodeListBox" ItemsSource="{Binding Nodes}"
                                    VirtualizingStackPanel.IsVirtualizing="False" >
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}" />
                                    <Setter Property="Canvas.Top" Value="{Binding Y}" />
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                <Button 
                                    Width="200" 
                                    MinHeight="100"
                                    Background="{StaticResource DarkGreenBrush}" 
                                    FontSize="30" 
                                    Padding="8"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Command="{Binding DataContext.NodeClickedCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}">
                                    
                                    <TextBlock
                                        Text="{Binding SubdepartmentName}"
                                        TextWrapping="Wrap"
                                        TextAlignment="Center"
                                        Foreground="White"/>
                                </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <ItemsControl ItemsSource="{Binding Connections}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Line X1="{Binding X1}" X2="{Binding X2}" Y1="{Binding Y1}" Y2="{Binding Y2}"
                                          Stroke="Black" StrokeThickness="1"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
            </ScrollViewer>
            <Button
                Content="⛶"
                Width="40"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="20"
                Click="FullscreenButton_Click"/>
        </Grid>



        <ListBox x:Name="WorkerListBox" ItemsSource="{Binding Workers}" Grid.Column="1" Grid.Row="1"  
                 Margin="10 30 30 30" Background="LightGray"
                 HorizontalContentAlignment="Stretch"
                 SelectedItem="{Binding SelectedWorker, Mode=TwoWay}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="0.5" >
                        <Grid Background="{StaticResource DarkGreenBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>



                            <TextBlock Grid.Row="0" Grid.Column="0" FontSize="9"
                                        Text="{Binding SubdepartmentName}" Margin="10 10 0 0 "/>
                            <TextBlock Grid.Row="0" Grid.Column="1" FontSize="9"
                                        Text="{Binding JobPosition, StringFormat=' - {0}'}" Margin="10 10 0 0"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" FontSize="13"
                                        Text="{Binding FullName}" Margin="10 3 0 0"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" FontSize="10"
                                        Text="{Binding WorkPhone}" Margin="10 3 0 0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" FontSize="10"
                                        Text="{Binding Email}" Margin="10 3 0 0"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" FontSize="9"
                                        Text="{Binding Office}" Margin="10 4 0 10"/>

                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>    
</Window>
